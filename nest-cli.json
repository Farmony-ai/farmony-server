{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "controllerFileNameSuffix": [".controller.ts"],
          "dtoFileNameSuffix": [".dto.ts", ".entity.ts", ".input.ts", ".args.ts"]
        }
      }
    ]
  },
  "watchOptions": {
    "watch": true,
    "assets": true,
    "polling": false
  }
}